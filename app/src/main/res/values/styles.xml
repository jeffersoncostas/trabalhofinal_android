<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/hkgrotesk</item>


        <!-- Transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/trans</item>
        <item name="android:windowExitTransition">@transition/trans</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform</item>
    </style>

    <style name="AppTheme_Dark_Dialog" parent="android:Theme.Holo.Dialog">

    </style>

    <style name="TextLabelStyle" parent="ThemeOverlay.AppCompat.Light"> <!-- estilo do input -->
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#bbbbbb</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/gradEnd</item>
        <item name="colorControlNormal">@color/gradEnd</item>
        <item name="colorControlActivated">@color/gradEnd</item>
    </style>

    <!-- Toast -->

    <style name="myToastError">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/colorPrimary</item>
        <item name="stFont">@font/hkgrotesk</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stStrokeColor">@color/colorPrimary</item>
        <item name="stIconStart">@drawable/ex</item>
        <item name="stRadius">25dp</item>
    </style>

    <style name="myToastRight">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/colorPrimary</item>
        <item name="stFont">@font/hkgrotesk</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stStrokeColor">@color/colorPrimary</item>
        <item name="stIconStart">@drawable/check</item>
        <item name="stRadius">25dp</item>
    </style>

</resources>
