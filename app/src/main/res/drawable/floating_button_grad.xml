<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center" android:top="15dp" android:start="14dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="@color/gradStart"
                android:endColor="@color/gradEnd" />
        </shape>

    </item>
    <item android:gravity="center" android:left="14dp" android:top="18dp" android:start="16dp">
        <bitmap android:src="@drawable/heart"
            android:gravity="center" />
    </item>

</layer-list>